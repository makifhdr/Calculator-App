<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <StackPanel Orientation="Vertical" >
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBox x:Name="ResultText" Text="0" IsEnabled="False"  FontSize="30" 
                     HorizontalAlignment="Center" BorderThickness="0"
                     Margin="0,0,10,0"/>
            <Button Content="CA" Click="Delete_All_Button_Click" 
                    FontSize="30" Width="50" HorizontalAlignment="Right"/>
            <Button Content="&lt;" Click="Delete_Button_Click" 
                    FontSize="30" Width="50" HorizontalAlignment="Right"/>
        </StackPanel>
    <StackPanel Margin="20" Orientation="Horizontal" HorizontalAlignment="Center">
        <UniformGrid Height="500" Width="500" Loaded="UserControl_Loaded">
            <Button Content="7" Click="Number_Button_Click" FontSize="30"/>
            <Button Content="8" Click="Number_Button_Click" FontSize="30"/>
            <Button Content="9" Click="Number_Button_Click" FontSize="30"/>
            <Button Content="÷" Click="Operator_Button_Click" FontSize="30"/>
            <Button Content="4" Click="Number_Button_Click" FontSize="30"/>
            <Button Content="5" Click="Number_Button_Click" FontSize="30"/>
            <Button Content="6" Click="Number_Button_Click" FontSize="30"/>
            <Button Content="×" Click="Operator_Button_Click" FontSize="30"/>
            <Button Content="1" Click="Number_Button_Click" FontSize="30"/>
            <Button Content="2" Click="Number_Button_Click" FontSize="30"/>
            <Button Content="3" Click="Number_Button_Click" FontSize="30"/>
            <Button Content="-" Click="Operator_Button_Click" FontSize="30"/>
            <Button Content="," Click="Number_Button_Click" FontSize="30"/>
            <Button Content="0" Click="Number_Button_Click" FontSize="30"/>
            <Button Content="=" Click="Equal_Button_Click" FontSize="30" IsDefault="True"/>
            <Button Content="+" Click="Operator_Button_Click" FontSize="30"/>
        </UniformGrid>
    </StackPanel>
    </StackPanel>
</Window>
